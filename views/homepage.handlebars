{{#each blogPosts as |blog| }}
<div class="row mb-4 blog-post">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.blog_title}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.blog_post}}
    </p>
  </div>
</div>
{{/each}}
